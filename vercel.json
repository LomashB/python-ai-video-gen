{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python@3.1.30",
      "config": {
        "runtime": "python3.10",
        "pythonVersion": "3.10.8",
        "maxLambdaSize": "15mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ],
  "buildCommand": "pip install -r requirements.txt",
  "installCommand": "pip install --upgrade pip && pip install -r requirements.txt"
}